<!--pages/settings/settings.wxml-->
<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="../../images/logo.jpg" background-size="cover"></image>
    <text class="userinfo-nickname">云儿词典 v0.1</text>
  </view>
  <view class="list-container">
  
  <view class="list-item" bindtap="showHelp">
    <text class="list-name">软件说明</text>
    <image class="list-icon" src="/images/chevron.png"></image>
  </view>
  <view class="list-item" bindtap="showFeedback">
    <text class="list-name">用户反馈</text>
    <image class="list-icon" src="/images/chevron.png"></image>
  </view>
  </view>
</view>
